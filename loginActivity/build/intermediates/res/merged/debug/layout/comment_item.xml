<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/card_border"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:padding="10dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <FrameLayout
        android:background="@drawable/card_border"
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginRight="40dp"
            android:src="@drawable/circle" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivComment"
            android:layout_gravity="left"
            android:layout_marginTop="75dp"
            android:text="Author"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/BlackReed" />


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ivComment"
            android:layout_marginLeft="40dp"
            android:text="Content blah blah lalalalalalalalalalalalala....
sdkjfhdskjfghkjsdhgkjdshfkjsdhfkjdshfkjdshfkjsdhfkjdshfkjhdsf
jkshdfkjsdhfkjdshfkjsdhfkjsdhkfjhdskjfhdskjfhdskjhf"
            android:textColor="@color/BlackReed" />

    </RelativeLayout>
</android.support.v7.widget.CardView>