<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->

  <!-- Base application theme. -->
  <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/sand</item>
    <item name="colorPrimaryDark">@color/BlackReed</item>
    <item name="colorAccent">@color/LithiumPool</item>
    <item name="android:statusBarColor">@color/limon</item>

    <item name="android:colorBackground">@color/Ivory</item>
    <!-- Applies to views in their activated state (i.e checked or switches) -->
    <item name="colorControlActivated">@color/LithiumPool</item>
    <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
    <item name="colorControlHighlight">@color/LithiumPool</item>
    <!-- Default color of the status bar at the top of your device  -->
    <item name="selectableItemBackground">?android:selectableItemBackground</item>
    <item name="selectableItemBackgroundBorderless">?android:selectableItemBackgroundBorderless
    </item>

    <item name="android:actionBarPopupTheme">@style/Theme.YourAppsName.ActionBarPopupTheme</item>

  </style>

  <style name="Theme.YourAppsName.ActionBarPopupTheme" parent="android:ThemeOverlay.Material.Light">
    <item name="android:colorBackground">@color/limon</item>
    <item name="android:textColor">@color/Ivory</item>
  </style>


  <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/ice</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingStart">8dp</item>
    <item name="tabPaddingEnd">8dp</item>
    <item name="tabBackground">?attr/colorPrimary</item>
    <item name="tabTextAppearance">@style/TabTextAppearance</item>
    <item name="tabSelectedTextColor">?attr/colorAccent</item>


  </style>

  <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/Ivory</item>
    <item name="textAllCaps">true</item>
  </style>


  <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:layout_centerInParent">true</item>
    <item name="android:padding">5dp</item>
    <item name="android:textSize">21sp</item>
    <item name="android:textStyle">bold</item>
  </style>


  <style name="MyEditText" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">?attr/colorPrimary</item>
    <item name="colorControlActivated">?attr/colorAccent</item>
  </style>


  <style name="MyButton" parent="Theme.AppCompat.Light">
    <item name="colorControlHighlight">?attr/colorAccent</item>
    <item name="colorButtonNormal">?attr/colorPrimary</item>

  </style>


</resources>